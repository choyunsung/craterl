{erl_opts, [
    %% Erlang releases after 17 don't put R in front of their name, and also require dict() to be written like dict:dict()
    {platform_define, "^[0-9]+", namespaced_dicts},
    warn_export_vars,
    warn_shadow_vars,
    warn_obsolete_guard,
    warn_unused_import,
    warnings_as_errors,
    fail_on_warning,
    debug_info]}.
{deps,
  [
    {lager, "2.0.3", {git, "https://github.com/basho/lager.git", {tag, "2.0.3"}}},
    {jsx, "1.4.5", {git, "https://github.com/talentdeficit/jsx.git", {tag, "v1.4.5"}}},
    {hackney,"0.11.1",{git,"https://github.com/benoitc/hackney",{tag,"0.11.1"}}},
    {cowboy, "0.9.0", {git, "https://github.com/extend/cowboy.git", {tag, "0.9.0"}}},
    {meck, "0.8.2", {git, "https://github.com/eproxus/meck.git", {tag, "0.8.2"}}}
  ]
}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled, true}.
{cover_export_enabled, true}.
{ct_dir, "ct"}.
{ct_log_dir, "ct/logs"}.
{clean_files, [".eunit", "ebin/*.beam", "test/*.beam"]}.
